<h2 class="app-page-title">グラフ・計算</h2>

<div class="container text-center">
  <h4 class="mb-3">
    <%= form_tag(smoke_records_path, method: :get) do %>
      <div class="form-group">
        <%= label_tag 'duration', '期間'%>
        <%= select_tag 'duration', options_for_select([['1週間', '7'], ['1ヶ月', '30'], ['全期間', 'all']], params[:duration]), class: "orm-select form-select-lg" %>
        <%= submit_tag '比較する' %>
      </div>
    <% end %>   
  </h4>
</div>



<div class="container-fluid">
      <div class="row g-4 mb-4 align-items-stretch">
        <div class="col-12 col-lg-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250 d-flex h-100">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-success">喫煙本数</strong>
                    <div class="mb-1 text-muted" style="width: 100%;"><%= column_chart @data, height: '350px', width: "100%", xtitle: '日付', ytitle: '喫煙数', suffix: "本" %></div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
          <div class="card flex-md-row mb-4 box-shadow h-100">
            <div class="card-body d-flex flex-column align-items-start">
              <strong class="d-inline-block mb-4 text-success">喫煙記録</strong>
              <h3 class="calculation-item mb-4"><i class="fas fa-smoking calculation-icon"></i>喫煙数: <span class="font-change"><%= @total_smoked %></span> 本</h3>
              <h3 class="calculation-item mb-4"><i class="fas fa-coins calculation-icon"></i>喫煙額: <span class="font-change"><%= @cost %></span> 円</h3>
              <h3 class="calculation-item mb-4"><i class="fas fa-piggy-bank calculation-icon"></i>節約金額: <span class="font-change"><%= @saved_cost %></span> 円</h3>
              <h3 class="calculation-item mb-4"><i class="fas fa-heartbeat calculation-icon"></i>伸びた寿命: <span class="font-change"><%= @saved_life %></span></h3>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250 d-flex h-100">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-success">喫煙額</strong>
                    <div class="mb-1 text-muted" style="width: 100%;"><%= column_chart @price_data, height: '350px', width: "100%", xtitle: '日付', ytitle: '金額', suffix: "円" %></div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250 d-flex h-100">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-success">節約金額</strong>
                    <div class="mb-1 text-muted" style="width: 100%;"><%= column_chart @saving_data, height: '350px', width: "100%", xtitle: '日付', ytitle: '金額', suffix: "円" %></div>
                </div>
            </div>
        </div>
      </div>
</div>


