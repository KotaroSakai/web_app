<h1>喫煙記録一覧</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>喫煙数</th>
      <!-- 他のカラム -->
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @smoke_records.each do |smoke_record| %>
      <tr>
        <td><%= smoke_record.smoked %></td>
        <td><%= smoke_record.smoke_date %></td>
        <!-- 他のカラム -->
        <td><%= link_to '編集', edit_smoke_record_path(smoke_record) %></td>
        <td><%= link_to '削除', smoke_record, data: { turbo_method: :delete } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="container">
      <div class="row g-4 mb-4">
        <div class="col-12 col-lg-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250 d-flex">
                <div class="card-body d-flex flex-column align-items-start">
                    
                    <div class="mb-1 text-muted"><%= column_chart @data, height: '100%', xtitle: 'Date', ytitle: 'Total Smoked' %></div>
                    <p class="card-text mb-auto">ここにグラフ表示</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
          <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
              <strong class="d-inline-block mb-2 text-success">喫煙記録</strong>
              <h3 class="mb-0">
                  <%= form_tag(smoke_records_path, method: :get) do %>
                    <%= label_tag 'duration', '期間：' %>
                    <%= select_tag 'duration', options_for_select([['1週間', '7'], ['1ヶ月', '30'], ['全期間', 'all']], params[:duration]), include_blank: '選択してください' %>
                    <%= submit_tag '比較する' %>
                  <% end %>   
              </h3>
              <h2>喫煙総数: <%= @total_smoked %> 本</h2>
              <h2>喫煙総額: <%= @cost %> 円</h2>
              <h2>節約金額: <%= @saved_cost %> 円</h2>
              <h2>伸びた寿命: <%= @saved_life %></h2>
            </div>
          </div>
        </div>
      </div>
</div>


<h2>喫煙総数: <%= @total_smoked %> 本</h2>
<h2>喫煙総額: <%= @cost %> 円</h2>

<%= column_chart @data, height: '400px', xtitle: 'Date', ytitle: 'Total Smoked' %>
<%= line_chart @data, height: '500px', library: { scales: { x: { type: 'time', time: { unit: 'day' } } } } %>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  記録
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">喫煙記録</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: @smoke_record, url: smoke_records_path, local: true do |f| %>
					<div class="form-group">
						<%= f.label :smoke_date %>
						<%= f.date_field :smoke_date, value: Date.today %>
					</div>

					<div class="form-group">
						<%= f.label :smoked %>
						<%= f.number_field :smoked, class: "form-control" %>
					</div>
      
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
						<%= f.submit "記録する", class: "btn btn-primary" %>
					</div>
				<% end %>
			</div>
    </div>
  </div>
</div>