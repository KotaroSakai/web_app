<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1>反省文詳細</h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-9'>
              <h3 class="d-inline"><%= @post.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item">by <%= @post.user.name %></li>
                <li class="list-inline-item"><%= l @post.created_at %></li>
              </ul>
            </div>
          </div>
          <p><%= simple_format(@post.content) %></p>
					<%= render "likes/btn", post: @post %>
        </div>
      </article>
    </div>
  </div>