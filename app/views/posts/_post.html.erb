<% posts.each do |post| %>
	<div class="col-sm-12 col-lg-4 mb-3">
		<div class="post-card">
			<h3 class="card-head">反省文</h3>
			<h4 class="card-title">
				<%= link_to post.title, post_path(post) %>
			</h4>
			
			<ul class="list-inline">
				<li class="list-inline-item">
					<p>氏名: <%= post.user.name %></p>
				</li>
				<li class="list-inline-item">
					<p>提出日: <%= post.created_at.strftime("%Y-%m-%d") %></p>
				</li>
			</ul>
			<h4>内容</h4>
			<div class="post-card-text">
				<p><%= post.content %></p>
				<p class="text-end">以上</p>
			</div>
			<div class='mr10 float-right'>
				<% if current_user == post.user %>
					<%= link_to post_path(post), data: { turbo_method: :delete } do %>
						<%= icon 'fas', 'trash', class: 'pr-1' %>
					<% end %>
					<a href="#"><%= icon 'fa', 'pen' %></a>
				<% else %>
					<%= render "likes/btn", post: post%>
				<% end %>
			</div>
		</div>
	</div>
<% end %>